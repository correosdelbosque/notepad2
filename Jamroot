project Notepad2
    : requirements
		<include>src
		<include>scintilla/include
		<include>scintilla/src
		<link>static
		<runtime-link>static
		<define>UNICODE
		<define>STATIC_BUILD
		<define>SCI_LEXER
		<define>_CRT_SECURE_NO_DEPRECATE
		<define>_SCL_SECURE_NO_DEPRECATE
		<define>_SECURE_SCL=0
		<variant>release:<cflags>/GL
		<variant>release:<linkflags>/LTCG
		<variant>release:<linkflags>/OPT:REF
		<variant>release:<linkflags>/OPT:ICF
		<variant>release:<linkflags>/MERGE:.rdata=.text
    : build-dir bin.v2
	;

exe Notepad2
	: src/Notepad2.rc
	  [ glob src/*.c ]
	  [ glob src/*.cpp ]
	  [ glob scintilla/src/*.cxx ]
	  [ glob scintilla/win32/*.cxx ]
	: <user-interface>gui
	;
